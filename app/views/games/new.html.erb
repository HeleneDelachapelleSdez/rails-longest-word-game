<h1>New game<h1>
<p>Your grid is...</p>
<ul>
  <% @letters.each do |l| %>
    <li><%= l %></li>
  <% end %>
</ul>

<form action="/score" method="post">
  <input hidden type="text" name="grid" value="<%=@letters.join%>">
  <input type="text" name="suggestion" placeholder="What is your suggestion?">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit">
</form>
